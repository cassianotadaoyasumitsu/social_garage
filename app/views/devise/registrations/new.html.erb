<div class="row p-5">
  <div class="col-md-6">
    <h2>Cadastrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="row">
          <div class="col">
            <%= f.input :is_user, label: 'Quero Vender', input_html: { class: 'role-checkbox' } %>
          </div>
          <div class="col">
            <%= f.input :is_garage, label: 'Sou uma Garagem', input_html: { class: 'role-checkbox' } %>
          </div>
          <div class="col">
            <%= f.input :is_service, label: 'Tenho um Serviço', input_html: { class: 'role-checkbox' } %>
          </div>
        </div>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "bg-white" } %>
        <%= f.input :password,
                    label: "Senha",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "bg-white" } %>
        <%= f.input :password_confirmation,
                    label: "Confirme sua senha",
                    required: true,
                    input_html: { autocomplete: "new-password", class: "bg-white" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Registrar-se" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-6 text-center">
    <h1>Espaço para qualquer coisa</h1>
    <p>Publicidade</p>
    <p>Imagem</p>
    <p>Explicação</p>
  </div>
</div>
