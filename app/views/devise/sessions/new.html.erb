<div class="row p-5">
  <div class="col-md-6">
    <h2>Entrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "bg-white" } %>
        <%= f.input :password,
                    label: "Senha",
                    required: false,
                    input_html: { autocomplete: "current-password", class: "bg-white" } %>
        <%= f.input :remember_me, label: "Lembrar de mim!", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Entrar" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-6 text-center">
    <h1>Espaço para qualquer coisa</h1>
    <p>Publicidade</p>
    <p>Imagem</p>
    <p>Explicação</p>
  </div>
</div>